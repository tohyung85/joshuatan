<%= javascript_include_tag 'contactpage' %>
<div class="contact-container">
  <div class="contact-inner">
    <h1>Get in Touch!</h1>
    <br/><br/>
    <p class= "contact-text">Drop me a message...</p>
    <%= simple_form_for @contactmessage, html: {class: @displayform} do |f| %>
      <%= f.input :name %>    
      <br/>
      <%= f.input :email %>
      <br/>
      <%= f.input :message %>
      <br/>
      <%= f.submit 'Send', class: 'btn btn-default btn-lg', id: 'contact-submit' %>
    <% end %>
    <div class=<%= @displaysubmission %>>
      <h1>Thanks for the message!</h1>
      <br/>
      <%= link_to 'Click here to send another message', new_contactmessage_path %>
    </div>
    <br/><br/>
    <p class= "contact-text">Or let's get in touch using...</p>
    <div class="contact-social">
      <div class="contact-icons">
        <%= mail_to 'tantohyung@gmail.com' do %>
          <span class="contact-icons icon-envelope"></span>
          <p class="contact-icons-text">EMAIL</p>
        <% end %>
      </div>
      <div class="contact-icons">
        <a href="https://mobile.twitter.com/tantohyung">
          <span class="contact-icons icon-twitter"></span>
          <p class="contact-icons-text">TWITTER</p>
        </a>
      </div>
      <div class="contact-icons">
        <a href="https://www.facebook.com/profile.php?id=100012764088443">
          <span class="contact-icons icon-facebook"></span>
          <p class="contact-icons-text">FACEBOOK</p>
        </a>
      </div>      
      <div class="contact-icons">
        <a href="https://plus.google.com/103690899611882314643/posts">      
          <span class="contact-icons icon-googleplus"></span>
          <p class="contact-icons-text">GOOGLE PLUS</p>
        </a>
      </div>            
      <div class="contact-icons">
        <a href="https://github.com/tohyung85">            
          <span class="contact-icons fontello-github-circled contact-github"></span>   
          <p class="contact-icons-text">GITHUB</p>
        </a>
      </div>                     
    </div>
  </div>
</div>